pipeline{
 agent any
	tools{
		maven 'M3.6'
	}
 stages{
    stage('Checkout'){ 
	    steps{
		  git 'https://github.com/madhukar9889/petclinic.git'
		}
    }
		stage('Build') {
			steps{
			 M3_HOME = tool 'M3.6'
				sh "$M3_HOME/bin/mvn clean package"
		}
	}
	stage('Archival') {
			steps{
			archiveArtifacts artifacts: 'target/*.?ar', followSymlinks: false
		}
	}
		stage('Nexus uploader'){
			steps{
			 junit 'nexusArtifactUploader artifacts: [[artifactId: 'spring-petclinic', classifier: '', file: 'target/petclinic.war', type: 'war']], credentialsId: 'nexuscred1', groupId: 'org.springframework.samples', nexusUrl: '3.128.27.29:8081/nexus', nexusVersion: 'nexus2', protocol: 'http', repository: 'snapshots', version: '4.2.6-SNAPSHOT''
			}
	    }
	}		
		post{
			success{
				notify('success')
		    }
			failure{
				notify('failed')
			}
		}
    }

def notify(status) {
	emailext (
		to:'madhukarchalluri505@gmail.com',
		subject: "${status} - ${env.JOB_NAME}",
		body: "$status - Jenkins job ${env.BUILD_URL}"
	)
}
